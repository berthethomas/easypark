{% extends "layout.html.twig" %}
{% block title %}Informations du compte{%endblock%}
{%block content%} 
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2><i class="fa fa-info-circle"></i> Informations du compte</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{path('homepage')}}">Accueil</a>
                </li>
                <li class="active">
                    <strong>Informations du compte</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Informations du compte</h5>
                    </div>
                    <div class="ibox-content">
                        <form action="{{ path('edit_account') }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                            {{ form_start(form) }}
                            <div class="form-group{%if form_errors(form.nom)%} has-error{%endif%}">
                                <label class="col-sm-2 control-label">
                                    {{form_label(form.nom)}}
                                </label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.nom) }} 
                                    {%if form_errors(form.nom)%}
                                        <small class="text-danger">{{form_errors(form.nom)}}</small>
                                    {%endif%}
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group{%if form_errors(form.prenom)%} has-error{%endif%}">
                                <label class="col-sm-2 control-label">{{form_label(form.prenom)}}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.prenom) }} 
                                    {%if form_errors(form.prenom)%}
                                        <small class="text-danger">{{form_errors(form.prenom)}}</small>
                                    {%endif%}
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group{%if form_errors(form.email)%} has-error{%endif%}">
                                <label class="col-sm-2 control-label">{{form_label(form.email)}}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.email) }} 
                                    {%if form_errors(form.email)%}
                                        <small class="text-danger">{{form_errors(form.email)}}</small>
                                    {%endif%}
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group{%if form_errors(form.phonenumber)%} has-error{%endif%}">
                                <label class="col-sm-2 control-label">{{form_label(form.phonenumber)}}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.phonenumber) }} 
                                    {%if form_errors(form.phonenumber)%}
                                        <small class="text-danger">{{form_errors(form.phonenumber)}}</small>
                                    {%endif%}
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group{%if form_errors(form.type)%} has-error{%endif%}">
                                <label class="col-sm-2 control-label">{{form_label(form.type)}}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.type) }} 
                                    {%if form_errors(form.type)%}
                                        <small class="text-danger">{{form_errors(form.type)}}</small>
                                    {%endif%}
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group{%if form_errors(form.vehicule)%} has-error{%endif%}">
                                <label class="col-sm-2 control-label">{{form_label(form.vehicule)}}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.vehicule) }} 
                                    {%if form_errors(form.vehicule)%}
                                        <small class="text-danger">{{form_errors(form.vehicule)}}</small>
                                    {%endif%}
                                </div>
                            </div>
                            
                            <div class="hr-line-dashed"></div>
                            {{ form_rest(form) }}
                            <div class="form-group">
                                <div class="col-sm-4 pull-right">
                                    <a class="btn btn-white pull-right" href='{{path('homepage')}}'><i class="fa fa-times-circle-o" aria-hidden="true"></i> Annuler</a>
                                    <button class="btn btn-primary pull-right" type="submit"><i class="fa fa-floppy-o" aria-hidden="true"></i> Enregistrer</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%endblock%}